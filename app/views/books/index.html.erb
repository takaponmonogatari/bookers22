<h1>User info</h1>

<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Opinion</h4>
 <%= f.text_field :body %>
 <%= f.submit "Create Book" %>
<% end %>

<table>

<h1>Books</h1>
<tr>
    <th>Title</th>
    <th>Opinion</th>
</tr>
<% @books.each do |book| %>
<tr>
<th><%= book.title %></th>
<th><%= book.body %></th>
</tr>
<% end %>

</table>
