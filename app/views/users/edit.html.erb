<% if @user.errors.any? %>
 <% @user.errors.full_messages.each do |message| %>
 <%= message %>
 <% end %>
<% end %>

<h1>User info</h1>
 <%= form_with model: @user, local:true do |f| %>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name"%>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
  <label for="inputImage">ProfileImage</label>
   <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>

  <label for="introduction">Introduction</label>
  <%= f.text_area :introduction, autofocus: true, id: "user_introduction", placeholder: "introduction" %>


  <%= f.submit "Update User" , class: "btn btn-secondary" %>
 <%= flash[:notice] %>
 <%= flash[:alert] %>
<% end %>