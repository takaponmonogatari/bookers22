<div class="container">
 <div class="row">
  <div class="col-md-3">
   <%= render "users/list", book: @book, user:@user %>
  </div>
  <div class="col-md-8 offset-md-1">


<table class="table table-hover table-inverse">
<tr>
 <h1>Books</h1>
 <th></th>
 <th>Title</th>
 <th>Opinion</th>
</tr>

<% @books.each do |book| %>
 <tr>
  <td>
   <%= link_to user_path(@user.id) do %>
    <%= attachment_image_tag book.user, :profile_image, :fil, 100, 100, format: "jpeg",fallback: "no_image.jpg" %>
   <% end %>
  </td>
  <td>
   <%= link_to book_path(book.id) do %>
    <p><%= book.title %></p>
   <% end %>
  </td>
  <td>
     <%= book.body %>
  </td>
 </tr>
<% end %>
</table>

  </div>
 </div>
</div>

